FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh on;
snap            on;
addLayers       on;

geometry
{
    Prism1M.stl
    {
        type triSurfaceMesh;
        name Prism1M;
    }

    refinementBox
    {
        type box;
        min  (  -0.2   -0.2   0);
        max  (0.4 0.2 0.3);
    }
}

castellatedMeshControls
{
    features
    (
      { file  "Prism1M.eMesh"; level 1; }
    );

    refinementSurfaces
    {
        Prism1M
        {
            level (2 3);
            patchInfo { type wall; }
        }
    }

    refinementRegions
    {
        refinementBox
        {
            mode inside;
            levels ((1E15 2));
        }
    }

    locationInMesh (0.1 0.1 0.1);
}

snapControls
{
    explicitFeatureSnap    true;
    implicitFeatureSnap    false;
}

addLayersControls
{
    layers
    {
        "Prism1M"
        {
            nSurfaceLayers 1;
        }
    }

    relativeSizes       true;
    expansionRatio      1.2;
    finalLayerThickness 0.5;
    minThickness        1e-3;
}

meshQualityControls
{}

writeFlags
(
    noRefinement
    // scalarLevels
    // layerSets
    // layerFields
);

mergeTolerance 1e-6;


